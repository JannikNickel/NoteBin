{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "NoteStorage": {
    "StorageType": "Memory",
    "ConnectionString": "Data Source=data/notes.db",
    "ContentPath": "data/notes/"
  },
  "UserStorage": {
    "StorageType": "SQLite",
    "ConnectionString": "Data Source=data/users.db"
  },
  "AuthSettings": {
    "AuthType": "Stateless",
    "KeyFile": "data/auth.key",
    "KeyLength": 64,
    "TokenLength": 64,
    "ExpirationDuration": 43200
  }
}
